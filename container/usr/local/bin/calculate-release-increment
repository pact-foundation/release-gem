#!/bin/sh

set -Eeuo pipefail

: "${1:?Please provide the last release tag as an argument}"
last_release_tag=$1

feat_commits=$(git log \
  --pretty=format:"%s" \
  --grep="^(feat)(\\(.*\\))?:" -E \
  ${last_release_tag}..HEAD)

fix_commits=$(git log \
  --pretty=format:"%s" \
  --grep="^(fix)(\\(.*\\))?:" -E \
  ${last_release_tag}..HEAD)

if [ -n "${feat_commits}" ]; then
  echo "minor"
elif [ -n "${fix_commits}" ]; then
  echo "patch"
fi
